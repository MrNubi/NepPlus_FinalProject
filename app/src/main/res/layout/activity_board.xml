<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sellected_color"
    tools:context=".Board.BoardActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="20dp"

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/sellected_color"
                android:gravity="center"
                android:orientation="vertical">

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="글쓰기 페이지"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="40dp"-->
<!--                    android:textStyle="italic"></TextView>-->

                <ImageView
                    android:src="@drawable/real_pen_white_pppng"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"></ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="@color/white"></LinearLayout>

            <EditText
                android:textColorHint="@color/white"
                android:id="@+id/BET_Title1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:hint="제목을 입력해주세요"></EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="@color/white"></LinearLayout>

            <EditText
                android:textColorHint="@color/white"
                android:id="@+id/BET_contents1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:hint="내용을 입력해주세요"></EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="@color/white"></LinearLayout>

            <ImageView
                android:id="@+id/BEI1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:src="@drawable/camera_icon"></ImageView>

            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_Boardwrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="40dp"
                android:background="@android:color/transparent"
                android:text="Push"></Button>
        </LinearLayout>
    </ScrollView>


</LinearLayout>


</layout>