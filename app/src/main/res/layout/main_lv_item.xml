<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/background"
        android:backgroundTint="@color/sellected_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_main_item_img"
            android:background="@drawable/background"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp">
    <ImageView

        android:id="@+id/img_MainLv"
        android:src="@drawable/bell_icon"
        android:scaleType="center"
        android:layout_width="100dp"
        android:layout_height="100dp"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/background"
            android:backgroundTint="@color/sellected_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/background"
                android:gravity="center">

                <TextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:id="@+id/txt_mainLV_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="타이틀"
                    android:textColor="@color/black"

                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/background"
                android:backgroundTint="@color/sellected_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/background"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/txt_mainLV_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"

                        android:layout_marginVertical="10dp"
                        android:text="Content"

                        android:textColor="@color/black"
                        android:textSize="30sp" />



                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="Time"


                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="time"
        android:id="@+id/txt_mainLV_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></TextView>

</LinearLayout>